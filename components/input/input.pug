mixin input(options)
    -
        var placeholder = options.placeholder?options.placeholder:''
        var value = options.value?options.value:'';
        var type = options.type || 'text';
        var mainClass = "input";
        mainClass += options.focusDemoMode?" input_focus-demo-mode":"";
        mainClass += options.type == "masked"?" input_masked":"";
        mainClass += options.type == "subscription"?" input_subscription":"";
    div(class=mainClass)
        if (options.title || options.subtitle)
            div(class="input__titles")
                div(class="input__title")
                    h3=options.title
                if options.subtitle
                    div(class="input__subtitle")
                        h3=options.subtitle
        input(class="input__input" placeholder=options.placeholder value=options.value type=type)
        div.input__subscription-button