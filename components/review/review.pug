include ../like-button/like-button

mixin review(options)
    div(class="review")
        div(class="review__side")
            div(class="review__image")
                img(src=require("../components/review/face.jpg"))
            div(class="review__like")
                +like-button({count:12})
        div(class="review__content")
            div(class="review__name")=options.name
            div(class="review__date")=options.date
            div(class="review__text")=options.text